@using eShopSolution.ViewModels.System.Users
@model RegisterRequest
@{ Layout = null; }

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Đăng Ký</title>

    <!-- Custom fonts for this template-->
    <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="/css/sb-admin-2.min.css" rel="stylesheet">

</head>

<body class="bg-gradient-primary">

    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Create an Account!</h1>
                            </div>
                            <form class="user" asp-action="Register" asp-controller="Login" method="post">
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="text" class="form-control form-control-user" asp-for="FirstName" id="exampleFirstName"
                                               placeholder="Họ Người Dùng">
                                    </div>
                                    <div class="col-sm-6">
                                        <input type="text" class="form-control form-control-user" asp-for="LastName" id="exampleLastName"
                                               placeholder="Tên Người Dùng">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="email" class="form-control form-control-user" asp-for="Email" id="exampleFirstName"
                                               placeholder="Nhập Email">
                                    </div>
                                    <div class="col-sm-6">
                                        <input type="date" class="form-control form-control-user" asp-for="Dob" id="exampleLastName"
                                               placeholder="Ngày Sinh">
                                    </div>
                                </div>
                                @*<div class="form-group">
                                        <input type="email" class="form-control form-control-user" asp-for="Email" id="exampleInputEmail"
                                               placeholder="Địa Chỉ Email">
                                    </div>*@
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="text" class="form-control form-control-user" asp-for="UserName" id="exampleFirstName"
                                               placeholder="Tên Đăng Nhập">
                                    </div>
                                    <div class="col-sm-6">
                                        <input type="number" class="form-control form-control-user" asp-for="PhoneNumber" id="exampleLastName"
                                               placeholder="Số Điện Thoại">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="password" class="form-control form-control-user" asp-for="Password"
                                               id="exampleInputPassword" placeholder="Mật Khẩu">
                                    </div>
                                    <div class="col-sm-6">
                                        <input type="password" class="form-control form-control-user" asp-for="ConfirmPassword"
                                               id="exampleRepeatPassword" placeholder="Nhập Lại Mật Khẩu">
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-primary btn-user btn-block">
                                    Đăng Ký
                                </button>
                                <hr>
                                <a href="https://accounts.google.com/signup" class="btn btn-google btn-user btn-block">
                                    <i class="fab fa-google fa-fw"></i> Đăng Ký Với Google
                                </a>
                                <a href="https://vi-vn.facebook.com/reg" class="btn btn-facebook btn-user btn-block">
                                    <i class="fab fa-facebook-f fa-fw"></i> Đăng Ký Với Facebook
                                </a>
                            </form>
                            <hr>
                            <div class="text-center">
                                <a class="small" href="forgot-password.html">Forgot Password?</a>
                            </div>
                            <div class="text-center">
                                <a class="small" href="login.html">Already have an account? Login!</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="/js/sb-admin-2.min.js"></script>

</body>

</html>
